# Use symlinks from global store instead of hard links
# This helps reduce deployment size on Vercel
shamefully-hoist=false
node-linker=hoisted
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
auto-install-peers=true
strict-peer-dependencies=false

# Store configuration for CI/CD environments
# This prevents creating .pnpm-store in the project directory
virtual-store-dir=node_modules/.pnpm
