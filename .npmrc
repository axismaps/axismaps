# Use hoisted node linker to reduce deployment size
# This keeps all dependencies in node_modules/.pnpm
node-linker=hoisted
shamefully-hoist=false
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
auto-install-peers=true
strict-peer-dependencies=false

# Prevent creating .pnpm-store in project directory
# The virtual store will be in node_modules/.pnpm (default)
# The global store should be outside the project
store-dir=~/.pnpm-store
